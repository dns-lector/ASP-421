@model ASP_421.Data.Entities.Product

<div class="col">
    <a class="h-100 nav-link" 
        asp-controller="Shop" 
        asp-action="Product" 
        asp-route-id="@(Model.Slug ?? Model.Id.ToString())">

        <div class="card h-100">
            <img src="/Storage/Item/@Model.ImageUrl" 
                class="card-img-top" 
                alt="@Model.Name"/>

            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
            </div>

            <div class="card-footer d-flex justify-content-between align-items-center">
				<span>₴ @Model.Price.ToString("F2")</span>
                <span>
                    <button 
                        type="button" 
                        class="btn btn-outline-success btn-add-to-cart"
                        data-add-to-cart="@Model.Id">
                        <i class="bi bi-cart-plus"></i>
                    </button>
                </span>
            </div>
        </div>
    </a>
</div>
