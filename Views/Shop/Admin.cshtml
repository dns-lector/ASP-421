@model ASP_421.Models.Shop.ShopAdminViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="display-4">Управління контентом</h1>

    <div class="border m-3 p-4">
        <form id="admin-group-form" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="group-name-addon">
                            <i class="bi bi-bookmark-check"></i>
                        </span>
                        <input name="group-name"
                               type="text" class="form-control" placeholder="Назва групи"
                               aria-label="Назва групи" aria-describedby="group-name-addon" />
                    </div>
                </div>
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="group-description-addon">
                            <i class="bi bi-chat-left-text"></i>
                        </span>
                        <input name="group-description"
                               type="text" class="form-control" placeholder="Опис групи"
                               aria-label="Опис групи" aria-describedby="group-description-addon" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="group-slug-addon">
                            <i class="bi bi-link"></i>
                        </span>
                        <input name="group-slug"
                               type="text" class="form-control" placeholder="Посилання"
                               aria-label="Посилання" aria-describedby="group-slug-addon" />
                    </div>
                </div>
                <div class="col">
                    <div class="input-group mb-3">
                        <label class="input-group-text" for="group-image"><i class="bi bi-image"></i></label>
                        <input name="group-image" type="file" class="form-control" id="group-image" />
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Створити</button>
        </form>
    </div>


    <div class="border m-3 p-4">
        <form id="admin-product-form" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="product-name-addon">
                            <i class="bi bi-bookmark-check"></i>
                        </span>
                        <input name="product-name"
                               type="text" class="form-control" placeholder="Назва товару"
                               aria-label="Назва товару" aria-describedby="product-name-addon" />
                    </div>
                </div>
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="product-description-addon">
                            <i class="bi bi-chat-left-text"></i>
                        </span>
                        <input name="product-description"
                               type="text" class="form-control" placeholder="Опис товару"
                               aria-label="Опис товару" aria-describedby="product-description-addon" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="product-slug-addon">
                            <i class="bi bi-link"></i>
                        </span>
                        <input name="product-slug"
                               type="text" class="form-control" placeholder="Посилання"
                               aria-label="Посилання" aria-describedby="product-slug-addon" />
                    </div>
                </div>
                <div class="col">
                    <div class="input-group mb-3">
                        <label class="input-group-text" for="product-image"><i class="bi bi-image"></i></label>
                        <input name="product-image" type="file" class="form-control" id="product-image" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="product-price-addon">
                            <i class="bi bi-bookmark-check"></i>
                        </span>
                        <input name="product-price"
                               type="number" min="0" step="0.01" class="form-control" placeholder="Ціна товару"
                               aria-label="Ціна товару" aria-describedby="product-price-addon" />
                    </div>
                </div>
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="product-stock-addon">
                            <i class="bi bi-chat-left-text"></i>
                        </span>
                        <input name="product-stock"
                               type="number" min="1" step="1" class="form-control" placeholder="Наявність товару"
                               aria-label="Наявність товару" aria-describedby="product-stock-addon" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="input-group mb-3">
                        <label class="input-group-text" for="inputGroupSelect01">Товарна група</label>
                        <select name="product-group-id" class="form-select" id="inputGroupSelect01">
                            @foreach(var group in Model.ProductGroups)
                            {
                                <option value="@group.Id">@group.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col">
					<button type="submit" class="btn btn-primary">Створити</button>
                </div>
            </div>
            
        </form>
    </div>


</div>